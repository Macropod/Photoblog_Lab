<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :text, placeholder: "Compose new post..." %>
  </div>
  <div class="picture_path">
    <%= f.label :picture %>
	  <%= f.file_field :picture %>
  </div>
  <div class="group-classification">
  	<%= f.label :family %>
  	<%= f.check_box :family, :class => 'visible-check-box' %>
  	<%= f.label :friends %>
  	<%= f.check_box :friends %>
  	<%= f.label :others %>
  	<%= f.check_box :others %>
  </div>
  <%= f.select(:gallery_id, @galleries.collect {|a| [a.name, a.id]}) %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>