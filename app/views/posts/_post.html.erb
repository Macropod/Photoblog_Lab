<li>
  <span class="user"><%= post.user.name %></span>
  <span class="text"><%= post.text %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
  <% if admin? %>
      <span class="delete"> 
	  	<%= link_to "Delete", post, method: :delete,
	  								data: { confirm: "Are you sure?" },
	  								title: post.text %>
	  </span>
  <% end %>
</li>