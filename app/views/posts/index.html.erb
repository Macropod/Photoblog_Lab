
<% if !admin? %>
	<div class="row">
	  <div class="col-md-3">
	    <% if signed_in? %>
	      	<div class="well sidebar-nav gallery-sidebar">
	        	<%= render 'shared/galleries' %>
	        </div>
	    <% end %>
	  </div>
	  
	  <div class="col-md-8">
	    <% if @posts.any? && signed_in? %>
	      <ol class="posts">
	        <%= render @posts %>
	      </ol>
	      <%= will_paginate @posts %>
	    <% end %>
	  </div>

	  <div class="col-md-1">
	  </div>
	</div>
<% else %>
	<div class="container">
		<h1>All posts</h1>
		<ol class="posts">
			<% @posts.each do |post| %>	
				<li>
			        <span class="picture-small"><%= image_tag( url_esc_post(10000, :thumb, post) , class: "picture-small", alt: post.text ) %></span>
			        <div class="row post-meta">
			          <div class="post-meta2">
			            <div class="col-md-8"><span class="text"><%= post.text %></span></div>
			            <div class="col-md-4 timestamp">
			              Posted <%= time_ago_in_words(post.created_at) %> ago.
			            </div>
			            Family 1: <%= post.family %> Friends 1: <%= post.friends %> Family 2: <%= post.others %> Gallery:  <%= post.gallery.name unless post.gallery.nil? %> Number of comments: <%= post.comments.count %>
			          </div>
			        </div>
			        <% if admin? %>
			            <span class="delete"> 
			            <%= link_to "Delete", post, method: :delete,
			                          data: { confirm: "Are you sure?" },
			                          title: post.text %>
			            | <%= link_to "update", edit_post_path(post.id) %>
			            </span>
			        <% end %>
			    </li>
		    <%end%>
		</ol>
		<%= will_paginate @posts %>
	</div>
<% end %>