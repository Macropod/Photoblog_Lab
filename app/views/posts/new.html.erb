<div class="container">
	<h1>Create a new post</h1>

	<div class="row">
	<aside class="span4">
	  <section>
	    <%= render 'shared/user_info' %>
	  </section>
	  <section>
	  	<%= form_for(@post) do |f| %>
	  		<%= render 'fields', f: f %>
		  	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
		<% end %>
	  </section>
	</aside>
	</div>  
</div>
