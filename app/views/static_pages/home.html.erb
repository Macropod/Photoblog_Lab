<div class="row-fluid">
  <div class="bckgrnd-img ">
    <% if !signed_in? %>
      <%= image_tag( 'background.jpg' , alt: "Sydney at night" ) %></div>
    <% end %>
    <div class="center hero-unit-mod">
        <% if signed_in? %>
          <div class="home-highlight-text">
        	 <h1>Whats new?</h1>
          </div>
          <% if admin? %>
            <%= link_to "Create a new post!", newpost_path, class: "btn btn-large btn-primary" %>
          <% end %>
        <% else %>
          <div class="home-highlight-text">
          	<h1>Welcome to the PhotoBlog</h1>
        	  <h2>
        	    of Anja and Alexander
        	  </h2>
          </div>
        <% end %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="container"> 
    <div class="span12">
      <% if @posts.any? && signed_in? %>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  </div>
</div>