
<div class="center hero-unit bckgrnd-img">
  <div class="container">
    <% if signed_in? %>
    	<h1>Whats new?</h1>
      <% if admin? %>
        <%= link_to "Create a new post!", newpost_path, class: "btn btn-large btn-primary" %>
      <% end %>
    <% else %>
    	<h1>Welcome to the PhotoBlog</h1>
  	  <h2>
  	    of Anja and Alexander
  	  </h2>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <% if @posts.any? && signed_in? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>