<div class="container">
  <h1>Sign In</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign In", class: "mod-button" %>
      <% end %>
    </div>
  </div>
</div>