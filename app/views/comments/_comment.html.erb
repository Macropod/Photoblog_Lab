<li>
  <div class="row-fluid">
	  <div class="span8"><%= comment.content %></div>
	  <div class="span4 timestamp">
	    Posted <%= time_ago_in_words(comment.created_at) %> ago.
	     <% if admin? %>
	        <span class="delete"> 
	  	  	<%= link_to "Delete", comment, method: :delete,
	  	  								data: { confirm: "Are you sure?" },
	  	  								title: comment.content %>
	  	  </span>
	    <% end %>
	  </div>
  </div>
</li>